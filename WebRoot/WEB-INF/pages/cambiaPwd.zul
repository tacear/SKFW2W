<?page title="Genera Password"?>

<zk>
	<window apply="mx.com.hunkabann.skf.frontent.login.CambiaPwdCtrl" id="cambiaPwdWindow" width="360px" 
		position="center,center" action="show: slideDown;hide: slideUp" closable="true" border="none">
		<panel title="Genera nueva contraseña" height="180px">
			<panelchildren>
				<vbox>
					<space />
					
					<grid>
						<columns sizable="true">
					            <column align="right" />
					            <column align="left" />
						</columns>
						<rows>
							<row>
								<label value = "contraseña nueva:" />
								<textbox id = "txNewPwd"  width="200px" type="password" />
							</row>
							<row>
						<label value = "reteclee contraseña nueva:" />
						<textbox id = "txNewPwdAgain"  width="200px" type="password" />
							</row>
						</rows>
					</grid>
				
					
					<space />
					
					<hbox>
						<space /><space /><space /><space /><space /><space /><space />
						<button label = "Aceptar" id = "btnAceptar" />
						<space />
						<button label = "Cancelar"  id = "btnCancelar" />
					</hbox>
			
				</vbox>
			</panelchildren>
		</panel>
	</window>
</zk>